<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7FA">

    <LinearLayout
        android:id="@+id/layoutEvaluaciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloEvaluaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evaluaciones de Asignaturas"
            android:textAlignment="center"
            android:textColor="#1A3C20"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="8dp" />

        <ScrollView
            android:id="@+id/scrollEvaluaciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/contenedorEvaluaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:dividerPadding="12dp" />
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
