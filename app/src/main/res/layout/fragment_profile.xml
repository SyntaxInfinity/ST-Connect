<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Logo Santo Tomás"
        android:src="@drawable/logo_santo_tomas"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="112dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Usuario"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileRut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUT estudiante"

            android:layout_marginBottom="10dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/profileCarrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrera usuario"
            android:textAlignment="center"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="394dp"
        android:layout_height="236dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <!-- Aquí puedes usar una foto o QR -->
        <ImageView
            android:id="@+id/fotoUsuario"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/outline_article_person"
            android:contentDescription="Foto del usuario"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="usuario@correo.com"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

    <TextView
        android:id="@+id/profileGps"
        android:layout_width="396dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="Ubicación no disponible"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
