<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Logo Santo Tomás"
        android:src="@drawable/logo_santo_tomas"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Usuario"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginBottom="7dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileRut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUT estudiante"
            android:layout_marginBottom="7dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/profileCarrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrera usuario"
            android:textAlignment="center"
            android:layout_marginBottom="7dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/numeroTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fono"
            android:textAlignment="center"
            android:textSize="16sp" />


    </LinearLayout>
    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="usuario@correo.com"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50
"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71000004">

        <!-- Slider de imágenes -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <TextView
        android:id="@+id/profileGps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ubicación no disponible"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
