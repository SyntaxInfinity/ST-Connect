<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="98dp"
        android:layout_height="97dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/logo_santo_tomas" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Nombre del Usuario"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profileRut"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="rut estudiante"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="usuario@correo.com"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/profileCarrera"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="carrera usuario"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/profileGps"
        android:layout_width="203dp"
        android:layout_height="35dp"
        android:text="CFT/IP SANTO TOMAS RANCAGUA"
        android:layout_marginBottom="360dp"
        android:textAlignment="center" />
    <Button
        android:id="@+id/btnLogout"
        style="@style/BotonPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#224922"
        android:text="cerrar sesion"
        android:onClick="Logout"/>

</LinearLayout>
